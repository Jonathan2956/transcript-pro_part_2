# =============================================
# TranscriptPro Backend Environment Configuration
# =============================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# MongoDB Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/transcript-pro?retryWrites=true&w=majority

# JWT Authentication Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRE=30d

# API Keys for External Services
# OPENAI_API_KEY=your-openai-api-key-here  # COMMENTED: Replaced with OpenRouter
# GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
# YOUTUBE_API_KEY=your-youtube-data-api-v3-key  # COMMENTED: Now using Piped API

# Email Service Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=TranscriptPro <noreply@transcriptpro.com>

# Cloudinary Configuration (File Uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM

# Feature Flags
FEATURE_AI_PROCESSING=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_PREMIUM_FEATURES=true
FEATURE_ANALYTICS=true

# =============================================
# NEW: Pronunciation Configuration
# =============================================

# Web Speech API Settings (Browser Built-in - No API Key Required)
PRONUNCIATION_ENABLED=true
DEFAULT_PRONUNCIATION_LANGUAGE=auto
SKIP_HINDI_ORIGINAL_PRONUNCIATION=true

# Text-to-Speech Settings
TTS_RATE=0.8
TTS_PITCH=1.0
TTS_VOLUME=1.0

# Supported Languages for Pronunciation
SUPPORTED_LANGUAGES=en,hi,es,fr,de

# =============================================
# NEW: Piped API Configuration (YouTube Alternative)
# =============================================

# Piped API Configuration - No API Key Required
# Multiple instances for redundancy and faster response
PIPED_API_ENABLED=true
PIPED_API_PRIMARY_INSTANCE=https://pipedapi.kavin.rocks
PIPED_API_FALLBACK_INSTANCES=https://pipedapi.moomoo.me,https://pipedapi-libre.kavin.rocks,https://pipedapi.smnz.de,https://pipedapi.in.projectsegfau.lt

# Piped API Request Settings
PIPED_API_TIMEOUT=10000
PIPED_API_MAX_RETRIES=3

# YouTube-dlp Fallback Configuration
YT_DLP_PATH=yt-dlp
YT_DLP_TIMEOUT=30000
YT_DLP_ENABLED=true

# Video Processing Settings
VIDEO_PROCESSING_TIMEOUT=60000
MAX_VIDEO_DURATION=7200  # 2 hours in seconds

# =============================================
# NEW: OpenRouter AI Configuration (OpenAI Alternative)
# =============================================

# OpenRouter API Configuration - Free AI Models
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# AI Model Selection
DEFAULT_AI_MODEL=mistralai/mistral-7b-instruct:free
FALLBACK_MODELS=meta-llama/llama-2-13b-chat:free,google/gemma-7b-it:free

# AI Processing Limits
AI_MAX_TOKENS=2000
AI_REQUEST_TIMEOUT=30000
AI_MAX_REQUESTS_PER_MINUTE=30

# AI Feature Settings
AI_TRANSCRIPT_FIXING=true
AI_PHRASE_EXTRACTION=true
AI_COMPLEXITY_ANALYSIS=true
AI_TRANSLATION=true

# Cache Configuration
AI_CACHE_ENABLED=true
AI_CACHE_DURATION=3600000  # 1 hour in milliseconds
