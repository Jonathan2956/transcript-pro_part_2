{
  "name": "transcript-pro-backend",
  "version": "1.0.0",
  "description": "YouTube Transcript App with AI Features - Backend API Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t transcript-pro-backend .",
    "docker:run": "docker run -p 5000:5000 transcript-pro-backend",
    "docker:compose": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs transcript-pro-backend",
    "setup:production": "bash scripts/install-production.sh",
    "health:check": "node scripts/health-check.js"
  },
  "keywords": [
    "youtube",
    "transcript",
    "ai",
    "learning",
    "language",
    "education",
    "mongodb",
    "express"
  ],
  "author": "Transcript Pro Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.5.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "nodemailer": "^6.9.4",
    "stripe": "^13.3.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/transcript-pro.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/transcript-pro/issues"
  },
  "homepage": "https://github.com/your-username/transcript-pro#readme"
  }
